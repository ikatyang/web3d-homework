extends ../../templates/homework2D.pug

append import
  link(rel='stylesheet' href=`${resources}/libraries/bootstrap/bootstrap.min.css`)
  script(src=`${resources}/libraries/jquery/jquery.min.js`)
  script(src=`${resources}/libraries/bootstrap/bootstrap.min.js`)

append style
  style.
    .description {
      position: absolute;
      color: white;
      top: 2em;
      width: 100%;
      text-align: center;
    }
    .lampshade {
      position: absolute;
      background: white;
      opacity: 0.05;
      border-radius: 50%;
    }
    .lampshade.template {
      display: none;
    }

append body
  .description='click to show control panel'
  .lampshade.template
    form.form-horizontal(role='form')
        .form-group
          label.col-sm-4.control-label='Switch'
          div.col-sm-8
            select.switch.form-control
              option(value='on')='On'
              option(value='off')='Off'
              option(value='blink' selected)='Blink'
        .form-group
          label.col-sm-4.control-label='Period'
          div.col-sm-8
            input.period.form-control(type='range' min='0.2' max='2' step='0.05' value='1')
        .form-group
          label.col-sm-4.control-label='Color H'
          div.col-sm-8
            input.color-h.form-control(type='range' min='0' max='1' step='0.05' value='1')
        .form-group
          label.col-sm-4.control-label='Color S'
          div.col-sm-8
            input.color-s.form-control(type='range' min='0' max='1' step='0.05' value='1')
        .form-group
          label.col-sm-4.control-label='Color L'
          div.col-sm-8
            input.color-l.form-control(type='range' min='0' max='1' step='0.05' value='1')
        .form-group
          label.col-sm-4.control-label='Intensity'
          div.col-sm-8
            input.intensity.form-control(type='range' min='1' max='20' step='0.05' value='1')
